<?xml version="1.0" encoding="UTF-8"?>
  <project xmlns="http://maven.apache.org/POM/4.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                               http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <!-- ==========================================================  -->
  <!--     Project Description                                     -->
  <!-- =========================================================== -->
  <properties>
    <base.dll>imageio-ext-gdalbasedll</base.dll>
    <full.dll>imageio-ext-gdalfulldll</full.dll>
    <msvc.dll>imageio-ext-gdalmsvcdll</msvc.dll>
    <ecw.dll>imageio-ext-gdalecwdll</ecw.dll>
    <mrsid.dll>imageio-ext-gdalmrsiddll</mrsid.dll>
    <hdf.dll>imageio-ext-gdalhdfdll</hdf.dll>
    <jhdf.dll>imageio-ext-jhdfdll</jhdf.dll>
     <gdal.version>1.4.5</gdal.version>
    <ecw.version>3.3</ecw.version>
    <mrsid.version>6.0.7</mrsid.version>
    <msvc.version>7.1</msvc.version>
    <hdf.version>4.2r1</hdf.version>
  </properties>
  <parent>
    <groupId>it.geosolutions.imageio-ext</groupId>
    <artifactId>imageio-ext-nativelibsdeployer</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <groupId>it.geosolutions.imageio-ext</groupId>
  <artifactId>imageio-ext-windowsdeployer</artifactId>
  <packaging>pom</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>-Windows Native Libraries Dependency Deployer</name>
  <scm>
     <connection>
       scm:svn:https://imageio-ext.dev.java.net/svn/imageio-ext/trunk/deploy/libs/windows
     </connection>
     <url>https://imageio-ext.dev.java.net/svn/imageio-ext/trunk/deploy/libs/windows</url>
  </scm>
  <description>Windows Native Libraries Dependency Deployer</description>
  <organization>
    <name>GeoSolutions</name>
    <url>http://www.geo-solutions.it</url>
  </organization>
  <inceptionYear>2006</inceptionYear>
  <licenses>
    <license>
      <name>Lesser General Public License (LGPL)</name>
      <url>http://www.gnu.org/copyleft/lesser.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <!--                                                                                -->
  <!--        BUILD                                                                   -->
  <!--                                                                                -->
  <!-- We are going to install some basic jar using some specialized ant  tasks.      -->
  <!-- We assume that you have maven 2 installed in the path. Note that maven version -->
  <!-- must be >=2.05.                                                                -->
  <!--                                                                                -->
<profiles>
  <profile>
  <id>base</id>
   <dependencies>
   <dependency>
     <groupId>it.geosolutions.imageio-ext</groupId>
     <artifactId>imageio-ext-gdalmsvcdll</artifactId>
     <version>${msvc.version}</version>
    </dependency>
    <dependency>
     <groupId>it.geosolutions.imageio-ext</groupId>
     <artifactId>imageio-ext-gdalbasedll</artifactId>
     <version>${gdal.version}</version>
    </dependency>
    <dependency>
     <groupId>it.geosolutions.imageio-ext</groupId>
     <artifactId>imageio-ext-gdalhdfdll</artifactId>
     <version>${hdf.version}</version>
    </dependency>
    <dependency>
     <groupId>it.geosolutions.imageio-ext</groupId>
     <artifactId>imageio-ext-jhdfdll</artifactId>
     <version>${hdf.version}</version>
    </dependency>
    </dependencies>
    <build>
       <plugins>
        <plugin>
        <dependencies>
            <dependency>
              <groupId>ant</groupId>
              <artifactId>ant-antlr</artifactId>
              <version>1.6.5</version>
            </dependency>
            <dependency>
              <groupId>antlr</groupId>
              <artifactId>antlrall</artifactId>
              <version>2.7.4</version>
            </dependency>
        </dependencies>
          <artifactId>maven-antrun-plugin</artifactId>
          <version>1.1</version>
          <executions>
            <execution>
              <phase>install</phase>
              <configuration>
               <tasks>
               <unzip src="${m2.localrepo}/${dllpath.prefix}/${base.dll}/${gdal.version}/${base.dll}-${gdal.version}.jar" dest="${path.native}" overwrite="true">
                </unzip>
                 <unzip src="${m2.localrepo}/${dllpath.prefix}/${msvc.dll}/${msvc.version}/${msvc.dll}-${msvc.version}.jar" dest="${path.native}" overwrite="true">
                </unzip>
                <unzip src="${m2.localrepo}/${dllpath.prefix}/${hdf.dll}/${hdf.version}/${hdf.dll}-${hdf.version}.jar" dest="${path.native}" overwrite="true">
                </unzip>
                <unzip src="${m2.localrepo}/${dllpath.prefix}/${jhdf.dll}/${hdf.version}/${jhdf.dll}-${hdf.version}.jar" dest="${path.native}" overwrite="true">
                </unzip>
                
                <copy file="${path.native}\msvcp71.dll" tofile="${path.native}\xiodtest.dll" failonerror="false"/>
                <available file="${path.native}\xiodtest.dll" property="sign.present"/>
                <fail message="Unable to deploy required libs on ${path.native}. See the setup guide for further information." unless="sign.present" />
                <delete file="${path.native}\xiodtest.dll" failonerror="false" verbose="false" />
               </tasks>
              </configuration>
              <goals>
                <goal>run</goal>
              </goals>
            </execution>
          </executions>
         </plugin>
         <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-install-plugin</artifactId>
          <version>2.1</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-site-plugin</artifactId>
          <version>2.0-beta-5</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-eclipse-plugin</artifactId>
          <version>2.3</version>
        </plugin>
      </plugins>
    </build>
  </profile>
  <profile>
  <id>full</id>
   <dependencies>
     <dependency>
     <groupId>it.geosolutions.imageio-ext</groupId>
     <artifactId>imageio-ext-gdalmsvcdll</artifactId>
     <version>${msvc.version}</version>
    </dependency>
     <dependency>
      <groupId>it.geosolutions.imageio-ext</groupId>
      <artifactId>imageio-ext-gdalfulldll</artifactId>
      <version>${gdal.version}</version>
    </dependency>
    <dependency>
      <groupId>it.geosolutions.imageio-ext</groupId>
      <artifactId>imageio-ext-gdalecwdll</artifactId>
      <version>${ecw.version}</version>
    </dependency>
    <dependency>
      <groupId>it.geosolutions.imageio-ext</groupId>
      <artifactId>imageio-ext-gdalmrsiddll</artifactId>
      <version>${mrsid.version}</version>
    </dependency>
    <dependency>
      <groupId>it.geosolutions.imageio-ext</groupId>
      <artifactId>imageio-ext-gdalhdfdll</artifactId>
     <version>${hdf.version}</version>
    </dependency>
    <dependency>
     <groupId>it.geosolutions.imageio-ext</groupId>
     <artifactId>imageio-ext-jhdfdll</artifactId>
     <version>${hdf.version}</version>
    </dependency>
   </dependencies>
   <build>
       <plugins>
        <plugin>
         <dependencies>
            <dependency>
              <groupId>ant</groupId>
              <artifactId>ant-antlr</artifactId>
              <version>1.6.5</version>
            </dependency>
            <dependency>
              <groupId>antlr</groupId>
              <artifactId>antlrall</artifactId>
              <version>2.7.4</version>
            </dependency>
         </dependencies>
          <artifactId>maven-antrun-plugin</artifactId>
          <version>1.1</version>
          <executions>
            <execution>
              <phase>install</phase>
              <configuration>
               <tasks>
                <unzip src="${m2.localrepo}/${dllpath.prefix}/${full.dll}/${gdal.version}/${full.dll}-${gdal.version}.jar" dest="${path.native}" overwrite="true">
                </unzip>
                <unzip src="${m2.localrepo}/${dllpath.prefix}/${ecw.dll}/${ecw.version}/${ecw.dll}-${ecw.version}.jar" dest="${path.native}" overwrite="true">
                </unzip>
                <unzip src="${m2.localrepo}/${dllpath.prefix}/${mrsid.dll}/${mrsid.version}/${mrsid.dll}-${mrsid.version}.jar" dest="${path.native}" overwrite="true">
                </unzip>
                <unzip src="${m2.localrepo}/${dllpath.prefix}/${hdf.dll}/${hdf.version}/${hdf.dll}-${hdf.version}.jar" dest="${path.native}" overwrite="true">
                </unzip>
                <unzip src="${m2.localrepo}/${dllpath.prefix}/${jhdf.dll}/${hdf.version}/${jhdf.dll}-${hdf.version}.jar" dest="${path.native}" overwrite="true">
                </unzip>
                 <unzip src="${m2.localrepo}/${dllpath.prefix}/${msvc.dll}/${msvc.version}/${msvc.dll}-${msvc.version}.jar" dest="${path.native}" overwrite="true">
                </unzip>
                <copy file="${path.native}\msvcp71.dll" tofile="${path.native}\deployedD.dll" failonerror="false"/>
                <available file="${path.native}\deployedD.dll" property="sign.present"/>
                <fail message="Unable to deploy required libs on ${path.native}. See the setup guide for further information." unless="sign.present" />
                <delete file="${path.native}\deployedD.dll" failonerror="false" verbose="false" />
               </tasks>
              </configuration>
              <goals>
                <goal>run</goal>
              </goals>
            </execution>
          </executions>
          </plugin>
         <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-install-plugin</artifactId>
          <version>2.1</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-site-plugin</artifactId>
          <version>2.0-beta-5</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-eclipse-plugin</artifactId>
          <version>2.3</version>
        </plugin>
      </plugins>
    </build>
  </profile>
</profiles>
</project>