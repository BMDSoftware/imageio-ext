<?xml version="1.0" encoding="UTF-8"?>
  <project xmlns="http://maven.apache.org/POM/4.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                               http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <!-- ==========================================================  -->
  <!--     Project Description                                     -->
  <!-- =========================================================== -->
  <properties>
    <dest.path>${env.JAVA_HOME}/jre/lib/i386</dest.path>
    <remote.url>http://www.geo-solutions.it/maven_repo</remote.url>
    <path.prefix>it/geosolutions/imageio-ext</path.prefix>
    <base.lib>imageio-ext-gdalbaselinuxlib</base.lib>
    <full.lib>imageio-ext-gdalfulllinuxlib</full.lib>
    <hdf.lib>imageio-ext-hdflinuxlib</hdf.lib>
    <gdal.version>1.4.5b</gdal.version>
    <ecw.version>3.3</ecw.version>
    <mrsid.version>6.0.7</mrsid.version>
    <msvc.version>7.1</msvc.version>
    <hdf.version>4.2r1</hdf.version>
    <temp.dir>${user.home}/temp</temp.dir>
  </properties>
  <parent>
    <groupId>it.geosolutions.imageio-ext</groupId>
    <artifactId>imageio-ext-nativelibsdeployer</artifactId>
    <version>1.0.9</version>
  </parent>
  <groupId>it.geosolutions.imageio-ext</groupId>
  <artifactId>imageio-ext-linuxdeployer</artifactId>
  <packaging>pom</packaging>
  <version>1.0.9</version>
  <name>-Linux Native Libraries Dependency Deployer</name>
  <scm>
     <connection>
       scm:svn:https://imageio-ext.dev.java.net/svn/imageio-ext/trunk/deploy/libs/linux
     </connection>
     <url>https://imageio-ext.dev.java.net/svn/imageio-ext/trunk/deploy/libs/linux</url>
  </scm>
  <description>Linux Native Libraries Dependency Deployer</description>
  <organization>
    <name>GeoSolutions</name>
    <url>http://www.geo-solutions.it</url>
  </organization>
  <inceptionYear>2006</inceptionYear>
  <licenses>
    <license>
      <name>Lesser General Public License (LGPL)</name>
      <url>http://www.gnu.org/copyleft/lesser.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <!--                                                                                -->
  <!--        BUILD                                                                   -->
  <!--                                                                                -->
  <!-- We are going to install some basic jar using some specialized ant  tasks.      -->
  <!-- We assume that you have maven 2 installed in the path. Note that maven version -->
  <!-- must be >=2.05.                                                                -->
  <!--                                                                                -->
<profiles>
  <profile>
  <id>base</id>
    <build>
       <plugins>
        <plugin>
          <artifactId>maven-antrun-plugin</artifactId>
          <version>1.1</version>
          <executions>
            <execution>
              <phase>generate-resources</phase>
              <configuration>
               <tasks>
               <mkdir dir="${temp.dir}" />
               <exec executable="sh">
                  <arg value="-c"/>
                  <arg value="echo downloading libraries [2 MB] "/>
                </exec>
               <get src="${remote.url}/${path.prefix}/${base.lib}/${version}/${base.lib}-${version}.jar" dest="${temp.dir}/${base.lib}-${version}.jar"/>
                <exec executable="sh">
                  <arg value="-c"/>
                  <arg value="unzip -o ${temp.dir}/${base.lib}-${version}.jar -d ${dest.path}"/>
                </exec>
               </tasks>
              </configuration>
              <goals>
                <goal>run</goal>
              </goals>
            </execution>
          </executions>
          <dependencies>
            <dependency>
              <groupId>ant</groupId>
              <artifactId>ant-antlr</artifactId>
              <version>1.6.5</version>
            </dependency>
            <dependency>
              <groupId>antlr</groupId>
              <artifactId>antlrall</artifactId>
              <version>2.7.4</version>
            </dependency>
        </dependencies>
         </plugin>
         <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-install-plugin</artifactId>
          <version>2.1</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-site-plugin</artifactId>
          <version>2.0-beta-5</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-eclipse-plugin</artifactId>
          <version>2.3</version>
        </plugin>
      </plugins>
    </build>
  </profile>
  <profile>
    <id>full</id>
    <build>
       <plugins>
        <plugin>
          <artifactId>maven-antrun-plugin</artifactId>
          <version>1.1</version>
          <executions>
            <execution>
              <phase>generate-resources</phase>
              <configuration>
               <tasks>
               <mkdir dir="${temp.dir}" />
	       				<exec executable="sh">
                  <arg value="-c"/>
                  <arg value="echo downloading libraries [4 MB]"/>
                </exec>
                <get src="${remote.url}/${path.prefix}/${full.lib}/${version}/${full.lib}-${version}.jar" dest="${temp.dir}/${full.lib}-${version}.jar"/>
	       <get src="${remote.url}/${path.prefix}/${hdf.lib}/${version}/${hdf.lib}-${version}.jar" dest="${temp.dir}/${hdf.lib}-${version}.jar"/>
                <exec executable="sh">
                  <arg value="-c"/>
                  <arg value="unzip -o ${temp.dir}/${full.lib}-${version}.jar -d ${dest.path}"/>
                </exec>
                <exec executable="sh">
                  <arg value="-c"/>
                  <arg value="unzip -o ${temp.dir}/${hdf.lib}-${version}.jar -d ${dest.path}"/>
                </exec>
               </tasks>
              </configuration>
              <goals>
                <goal>run</goal>
              </goals>
            </execution>
          </executions>
          <dependencies>
            <dependency>
              <groupId>ant</groupId>
              <artifactId>ant-antlr</artifactId>
              <version>1.6.5</version>
            </dependency>
            <dependency>
              <groupId>antlr</groupId>
              <artifactId>antlrall</artifactId>
              <version>2.7.4</version>
            </dependency>
        </dependencies>
         </plugin>
         <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-install-plugin</artifactId>
          <version>2.1</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-site-plugin</artifactId>
          <version>2.0-beta-5</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-eclipse-plugin</artifactId>
          <version>2.3</version>
        </plugin>
      </plugins>
    </build>
  </profile>
</profiles>
</project>
